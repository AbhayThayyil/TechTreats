            <div class="d-flex justify-content-between">
              <p class="text-muted mb-0">Invoice Date : 22 Dec,2019</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">GST 18%</span> 123</p>
            </div>

            <div class="d-flex justify-content-between mb-5">
              <p class="text-muted mb-0">Recepits Voucher : 18KU-62IIK</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">Delivery Charges</span> Free</p>
            </div> --}}
          </div>
          
          <div class="card-footer border-0 px-4 py-5"
            style="background-color: #292560; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
            <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
              paid: <span class="h2 mb-0 ms-2"> ₹ {{totalPaid}}</span></h5>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</section>


<script>

  //cancel order
  function cancelOrder(orderId,prodId,paymentMethod,quantity){
    console.log(orderId,prodId,paymentMethod,quantity,"this is the order id  and prod id ,payment,quantity passed to the fucntion")
    
    if(paymentMethod=='COD'){
      console.log("Payment method is COD")
      
      $.ajax({
      url:'/cancel-product',
      data:{
        orderId:orderId,
        productId:prodId,
        quantity:quantity,
        cancelStatus:'Cancelled'
      },
      method:'post',
      success:(response)=>{
        console.log(response.status)
        if(response.status){
          swal({
            title: "Are you sure?",
            text: "Are you sure you want to cancel the order?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
          })
          .then((willDelete)=>{
            if(willDelete){
              swal("Poof! Your order has been cancelled!", {
              icon: "success",
          }).then(()=>{
            location.reload()
          });
            }
          })
        }
      }
    })
    }
    else{
      console.log("Other payment methods")
      swal({
        title: "Are you sure?",
        icon: "warning",
        buttons: true,
        dangerMode: true,
      })
      .then((willDelete)=>{
        if(willDelete){
          swal({
            text:"Cancel Request initiated",
            icon:"success"
          }).then(()=>{
            location.reload()
          })


          $.ajax({
        url:'/cancel-product',
        data:{
          orderId:orderId,
        productId:prodId,
        quantity:quantity,
        cancelStatus:'Cancel Requested'
        },
        method: 'post',
        success:(response)=>{
          console.log(response.status)
          if(response.status){
            setTimeout(()=>{
              location.reload()
            },1000)
          }
        }

      })
    }
    else{
      console.log("No action taken")
    }
        
      })
    }
  }
//return order

function returnOrder(orderId,prodId){
  console.log(orderId,prodId,"Ids for return order")

  $.ajax({
    url:'/return-product',
    data:{
      orderId:orderId,
      productId:prodId,
      returnStatus:'Return Requested'
    },
    method:'post',
    success:(response)=>{
      console.log(response.status)
      if(response.status){
        swal({
                title: "Return Request!",
                text: "Return Request Initiated!",
                icon: "success",
                button: "Ok!",
              }).then(()=>{
                location.reload();
              });
      }

    }
  })

}

  
</script>