<section>
    <div class="container">
        <div class="row">
            <a href="/admin/add-product" class="btn btn-success my-3">Add Product</a>
        </div>
        <table class="table mt-3">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Description</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Image</th>
                    <th scope="col">Operations</th>
                    
                    {{!-- <th scope="col">sub-Image2</th>
                    <th scope="col">sub-Image3</th>
                    <th scope="col">sub-Image4</th> --}}
                </tr>
            </thead>
            <tbody>

                {{#each products}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>â‚¹ {{this.price}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.stock}}</td>
                    <td><img style="width:50px;height:50px" src="/productImages/{{this.image.[0]}}" alt=""></td>
                    {{!-- <td><img style="width:50px;height:50px" src="/product-images2/{{this._id}}.jpg" alt=""></td>
                    <td><img style="width:50px;height:50px" src="/product-images3/{{this._id}}.jpg" alt=""></td>
                    <td><img style="width:50px;height:50px" src="/product-images4/{{this._id}}.jpg" alt=""></td> --}}
                    <td><a href="/admin/edit-product?id={{this._id}}"><i class="btn btn-primary bi bi-pencil-square"></i></a>
                    <a href="/admin/delete-product/{{this._id}}"><i class="btn btn-danger bi bi-trash" onclick="return confirm('Are you sure you want to delete {{this.name}}?')"></i></a></td>

                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>