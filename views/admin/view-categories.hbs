<section>
    <div class="container">
        
        <div class="row">
            <a href="/admin/add-category" class="btn btn-success my-3">Add Category</a>
        </div>
        <table class="table mt-3">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Operations</th>
                    
                    {{!-- <th scope="col">sub-Image2</th>
                    <th scope="col">sub-Image3</th>
                    <th scope="col">sub-Image4</th> --}}
                </tr>
            </thead>
            <tbody>

                {{#each categories}}
                <tr>
                    <th scope="row">{{indexFrom1 @index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.description}}</td>
                   
                    <td><a href="/admin/edit-category?id={{this._id}}"><i class="btn btn-primary bi bi-pencil-square"></i></a>
                    <a href="/admin/delete-category/{{this._id}}"><i class="btn btn-danger bi bi-trash" onclick="return confirm('Are you sure you want to delete {{this.name}}?')"></i></a></td>

                </tr>
                {{/each}}
            </tbody>
        </table>
        <div class="text-center my-3">
            <a href="?page={{previous}}">Previous</a>
            {{#iterateTimes totalPages}}
        <a href="?page={{this}}">{{this}}</a>
            {{/iterateTimes}}
            <a href="?page={{next}}">Next</a>
        </div>
    </div>
</section>