<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.8.1/html2pdf.bundle.min.js"></script>


<script>
  function generatePDF() {
    const invoicePDF = document.getElementById('invoice')
    html2pdf(invoicePDF, {
      margin: 15,
      filename: 'techtreatsinvoice.pdf',
      image: { type: 'jpeg', quality: 0.98 },
      html2canvas: { scale: 2, logging: true, dpi: 192, letterRendering: true },
      jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' }
    })
  }


</script>

<script>


  // Reason submit test




  //cancel order
  function cancelOrder(orderId, prodId, paymentMethod, quantity) {
    console.log(orderId, prodId, paymentMethod, quantity, "this is the order id  and prod id ,payment,quantity passed to the fucntion")

    if (paymentMethod === 'COD') {
      console.log("Payment method is COD")

      swal({
        title: "Are you sure?",
        text: "Are you sure you want to cancel the order?",
        icon: "warning",
        buttons: true,
        dangerMode: true,
      })
        .then((willDelete) => {
          if (willDelete) {
            swal({
              title: 'Enter Reason',
              text: '*Please enter reason for cancellation !',
              content: {
                element: 'input',
                attributes: {
                  placeholder: "Reason",
                  type: 'text',
                  required: 'true'
                },
              },
              buttons: {
                cancel: true,
                confirm: {
                  text: "Submit",
                  value: true,
                  visible: true,
                  className: "btn-danger",
                  closeModal: true
                }
              }
            }).then((reason) => {
              if (reason) {

                $.ajax({
                  url: '/cancel-product',
                  data: {
                    reason: reason,
                    orderId: orderId,
                    productId: prodId,
                    quantity: quantity,
                    cancelStatus: 'Cancelled'
                  },
                  method: 'post',
                  success: (response) => {
                    console.log(response)
                    if (response.status) {
                      swal("Poof! Your order has been cancelled!", {
                        icon: "success",
                      }).then(() => {
                        location.reload()
                      })
                    }
                    else {
                      swal("Order remains")
                    }
                  }
                })

              }
              else {
                swal("Please enter a reason and retry")
              }
            })
          }
        })
    }

    else {
      console.log("Other payment methods")

      swal({
        title: "Are you sure?",
        text: "Are you sure you want to cancel the order?",
        icon: "warning",
        buttons: true,
        dangerMode: true,
      })
        .then((willDelete) => {
          if (willDelete) {
            swal({
              title: 'Enter Reason',
              text: 'Please enter reason for cancellation !',
              content: {
                element: 'input',
                attributes: {
                  placeholder: "Reason",
                  type: 'text'
                },
              },
              buttons: {
                cancel: true,
                confirm: {
                  text: "Submit",
                  value: true,
                  visible: true,
                  className: "btn-danger",
                  closeModal: true
                }
              }
            })
              .then((reason) => {
                if (reason) {

                  $.ajax({
                    url: '/cancel-product',
                    data: {
                      reason: reason,
                      orderId: orderId,
                      productId: prodId,
                      quantity: quantity,
                      cancelStatus: 'Cancel Requested'
                    },
                    method: 'post',
                    success: (response) => {
                      console.log(response)
                      if (response.status) {
                        swal("Cancel Request Inititated !", {
                          icon: "success",
                        }).then(() => {
                          location.reload()
                        })
                      }
                      else {
                        swal("Order remains")
                      }
                    }
                  })

                }
              })
          }
        })
    }
  }
  //return order

  function returnOrder(orderId, prodId) {
    console.log(orderId, prodId, "Ids for return order")

    swal({
      title: "Return Request",
      text: "Are you sure you want to return the order?",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    })
      .then((willReturn) => {
        if (willReturn) {
          swal({
            title: 'Enter Reason',
            text: 'Please enter reason for Returning !',
            content: {
              element: 'input',
              attributes: {
                placeholder: "Reason",
                type: 'text'
              },
            },
            buttons: {
              cancel: true,
              confirm: {
                text: "Submit",
                value: true,
                visible: true,
                className: "btn-danger",
                closeModal: true
              }
            }
          })
            .then((reason) => {
              if (reason) {
                $.ajax({
                  url: '/return-product',
                  data: {
                    reason: reason,
                    orderId: orderId,
                    productId: prodId,
                    returnStatus: 'Return Requested'
                  },
                  method: 'post',
                  success: (response) => {
                    console.log(response)
                    if (response.status) {
                      swal("Cancel Request Inititated !", {
                        icon: "success",
                      }).then(() => {
                        location.reload()
                      })
                    }
                    else {
                      swal("Order remains")
                    }
                  }
                })
              }
            })
        }
      })
  }


</script>