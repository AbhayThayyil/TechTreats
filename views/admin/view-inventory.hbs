<section>
    <div class="container">
        
        {{!-- <div class="row">
            <a href="/admin/add-stock" class="btn btn-success my-3">Add Stock </a>
        </div> --}}
        <table class="table mt-3">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Image</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Operations</th>
                    
                    {{!-- <th scope="col">sub-Image2</th>
                    <th scope="col">sub-Image3</th>
                    <th scope="col">sub-Image4</th> --}}
                </tr>
            </thead>
            <tbody>

                {{#each products}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.name}}</td>
                    <td><img style="width:50px;height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
                    <td>{{this.stock}}</td>
                    <td>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#example{{this._id}}" data-bs-whatever="@mdo">Add Stock</button>
                    </td>
                   
                    {{!-- <td><a href="/admin/edit-category?id={{this._id}}"><i class="btn btn-primary bi bi-pencil-square"></i></a> --}}

                </tr>

                <div class="modal fade" id="example{{this._id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">{{this.name}}</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form method="post" action="/admin/add-stock">
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Current Stock</label>
            <input type="text" class="form-control" id="recipient-name" value="{{this.stock}}" disabled>
          </div>
          
             {{!-- HIDDEN ID FOR MATCHING ID --}}
            <input type="text" name="id" value="{{this._id}}" hidden>


          <div class="mb-3">
            <label for="message-text" class="col-form-label">Additional Stock</label>
            <input  type="number" name="newStock" class="form-control" id="message-text"></input>
          </div>
          <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
        </form>
      </div>
      
    </div>
  </div>
</div>

    </div>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>